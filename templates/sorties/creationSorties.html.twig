{% extends 'base.html.twig' %}

{% block title %} Modifier mon profil {% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="container-fluid">
        <div class="row justify-content-center">

            <div class="col-5 text-primary">
                <h1 class="text-center text-primary mt-3 pt-3 display-9 fw-bold">Cr√©er une sortie  </h1>

                {{ form_errors(CreationSortieForm) }}

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form_start(CreationSortieForm) }}
                {{ form_row(CreationSortieForm.nom)}}
                {{ form_row(CreationSortieForm.dateHeureDebut)}}
                {{ form_row(CreationSortieForm.duree)}}
                {{ form_row(CreationSortieForm.dateLimiteInscription)}}
                {{ form_row(CreationSortieForm.nbInscriptionsMax)}}
                {{ form_row(CreationSortieForm.infosSortie)}}
                <label>Campus : {{ app.user.campus.nom }}</label>
               {# {% for Lieu in ville.Lieu  %}
                    <option value="{{ ville.id }}">{{ ville.nom }}</option>
                {% endfor %}#}
                {{ form_row(CreationSortieForm.ville)}}
                {{ form_row(CreationSortieForm.lieu)}}






                <div class="justify-content-center text-center">
                    <button class="btn btn-lg btn-secondary" type="submit" >Annuler</button>
                    <button class="btn btn-lg btn-primary" type="submit" >Enregistrer</button>
                    {{ form_end(CreationSortieForm) }}
                </div>
            </div>
        </div>

    </div>
{% endblock %}