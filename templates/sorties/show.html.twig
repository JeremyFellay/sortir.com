{% extends 'base.html.twig' %}

{% block title %}Sorties{% endblock %}

{% block body %}
    <h1>Sorties</h1>
<div class="container mt-3">
    <table class="table table table-striped">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ sortie.nom }}</td>
            </tr>
            <tr>
                <th>Date et heure de la sortie</th>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d-m-Y à H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date limite d'inscription</th>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre de places</th>
                <td>{{ sortie.nbInscriptionsMax }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ sortie.duree }} minutes</td>
            </tr>
            <tr>
                <th>Description et infos</th>
                <td>{{ sortie.infosSortie }}</td>
            </tr>
            <tr>
                <th>Campus</th>
                <td>{{ sortie.campus.nom }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ sortie.lieu.nom }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ sortie.lieu.rue }}</td>
            </tr>
            {# <tr>
                <th>Code Postal</th>
                <td>{{ sortie.codePostal }}</td>
            </tr> #}
            <tr>
                <th>Latitude</th>
                <td>{{ sortie.lieu.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ sortie.lieu.longitude }}</td>
            </tr>
        </tbody>
    </table>
</div>

    <h3>Liste des participants inscrits : </h3>
<div class="container mt-3">
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Pseudo </th>
            <th>Nom </th>
        </tr>
        </thead>
        <tbody>
            {% for users in sortie.users %}
            <tr>
                <td> <a href="{{ path('app_autreprofil', {id: users.id}) }}">{{ users.pseudo }} </a></td>
                <td> <a href="{{ path('app_autreprofil', {id: users.id}) }}">{{ users.nom }} </a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>



    <div class="justify-content-center text-center">
    <a href="{{ path('app_sorties_index') }}" class="btn btn-lg btn-secondary">Retour à la liste</a>
    </div>

{% endblock %}
