{% extends 'base.html.twig' %}

{% block title %}Campus index{% endblock %}

{% block body %}
    <h1 class="text-center mt-3 pt-3 display-9 fw-bold">Liste des campus </h1>
<div class="container mt-3">
    <table class="table table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for campus in campuses %}
            <tr>
                <td>{{ campus.nom }}</td>
                <td>
                    <a href="{{ path('app_campus_show', {'id': campus.id}) }}">Afficher</a>
                    <a href="{{ path('app_campus_edit', {'id': campus.id}) }}">Modifier</a>
                    <a href="{{ path('app_campus_delete', {'id': campus.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune données trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

    <div class="d-flex justify-content-center">
        <a href="{{ path('app_campus_new') }}" class="btn btn-primary text-white">Ajouter un nouveau campus</a>
    </div>
{% endblock %}
