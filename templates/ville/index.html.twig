{% extends 'base.html.twig' %}

{% block title %}Ville index{% endblock %}

{% block body %}
    <h1 class="text-center mt-3 pt-3 display-9 fw-bold">Ville index</h1>
<div class="container mt-3">
    <table class="table table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>CodePostal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ville in villes %}
            <tr>
                <td>{{ ville.id }}</td>
                <td>{{ ville.nom }}</td>
                <td>{{ ville.codePostal }}</td>
                <td>
                    <a href="{{ path('app_ville_show', {'id': ville.id}) }}">Afficher</a>
                    <a href="{{ path('app_ville_edit', {'id': ville.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <div class="d-flex justify-content-center">
        <a href="{{ path('app_ville_new') }}" class="btn btn-primary text-white">Cr√©er une nouvelle ville</a>
    </div>
{% endblock %}
