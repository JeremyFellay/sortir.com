            </div>
            <div class="mb-3">
                <label for="" class="form-label required">Nom</label>
                <input type="text" value="{{ app.user.nom }}" name="" required="required" maxlength="50" class="form-control" readonly>
            </div>
                <div class="mb-3">
                    <label for="" class="form-label required">Téléphone</label>
                    <input type="text" value="{{ app.user.telephone }}" name="" required="required" maxlength="50" class="form-control" readonly>
                </div>

                <div class="mb-3">
                    <label for="" class="form-label required">Campus</label>
                    <input type="text" value="{{ app.user.campus.nom }}" name="" required="required" maxlength="50" class="form-control" readonly>
                </div>

                    <div class="mb-3">
                        <label for="" class="form-label required">Email</label>
                        <input type="text" value="{{ app.user.email }}" name="" required="required" maxlength="50" class="form-control" readonly>
                    </div>

        </div>
    </div>
    </div>

