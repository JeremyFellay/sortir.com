{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">

            <div class="col-5 ">
                <h1 class="text-center mt-3 pt-3 display-9 fw-bold">Modifier mon mot de passe</h1>

                {{ form_start(ChangePasswordForm) }}
                {{ form_row(ChangePasswordForm.oldPassword) }}
                {{ form_row(ChangePasswordForm.motDePasse) }}


                <div class="justify-content-center text-center">
                    <a href="{{ path('app_monprofil') }}" class="btn btn-lg btn-secondary">Annuler</a>
                    <button class="btn btn-lg btn-primary" type="submit" >Enregistrer</button>
                {{ form_end(ChangePasswordForm) }}

            </div>
        </div>
    </div>
{% endblock %}
